<svg xmlns="http://www.w3.org/2000/svg" width="600" height="400">
  <!-- Define the clip path for chart areas -->
  <defs>
    <clipPath id="chartAreaClip">
      <rect width="526" height="278" x="0" y="0" />
    </clipPath>
  </defs>

  <!-- Draw the background rectangle -->
  <rect fill="#FFFFFF" width="600" height="400" rx="5" ry="5" />

  <!-- Draw the gridlines -->
  <g class="grid-lines">
    <path opacity="1" fill="none" stroke="#C0C0C0" stroke-width="1" d="M 64 278.5 L 590 278.5" />
    <!-- Add more path elements for other gridlines -->
  </g>

  <!-- Draw the x-axis and its labels -->
  <g class="x-axis">
    <path opacity="1" fill="none" stroke="#C0D0E0" stroke-width="1" d="M 68.5 334 L 68.5 339" />
    <text x="26" y="195" transform="translate(0,0) rotate(270 26 195)" text-anchor="middle">
      Nuclear weapon states
    </text>
    <!-- Add more text elements for x-axis labels -->
  </g>

  <!-- Draw the y-axis and its labels -->
  <g class="y-axis">
    <text x="300" y="25" text-anchor="middle" class="title">US and USSR nuclear stockpiles</text>
    <text x="300" y="40" text-anchor="middle" class="subtitle">
      Source: <tspan dx="0">thebulletin.metapress.com</tspan>
    </text>
    <!-- Add more path and text elements for y-axis and its labels -->
  </g>

  <!-- Draw the chart areas and their content -->
  <g class="chart-areas">
    <g class="chart-area">
      <path fill="rgb(47,126,216)" fill-opacity="0.75" d="M 44.22400475341705 277.96664 ..." />
      <path fill="none" stroke="#2f7ed8" stroke-width="2" d="M 44.22400475341705 277.96664 ..." />
      <!-- Add more path elements for other chart areas -->
    </g>
    <!-- Add more g elements for other chart areas -->
  </g>

  <!-- Draw the legend -->
  <g class="legend" transform="translate(221,358)">
    <rect fill="none" width="158" height="26" x="0.5" y="0.5" rx="5" ry="5" stroke="#909090" stroke-width="1" />
    <!-- Add more g elements for legend items -->
  </g>

  <!-- Draw the tooltip -->
  <g style="padding-bottom: 0px; padding-left: 0px; padding-right: 0px; white-space: nowrap; cursor: default; padding-top: 0px" class="tooltip"  visibility="hidden" transform="translate(0,0)">
    <!-- Add the rectangles and text elements for the tooltip -->
  </g>

  <!-- Draw the credits text -->
  <text style="position: absolute; font-family: 'lucida grande', 'lucida sans unicode', verdana, arial, helvetica, sans-serif; color: #909090; font-size: 9px; cursor: pointer; fill: #909090" x="590" y="395"  text-anchor="end">Highcharts.com</text>
</svg>
