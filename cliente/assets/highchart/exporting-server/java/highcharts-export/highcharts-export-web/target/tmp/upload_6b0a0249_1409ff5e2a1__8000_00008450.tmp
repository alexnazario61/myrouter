      <!-- Repeated grid lines can be simplified using a loop -->
      <template class="grid-line" times="5">
        <line x1="63" y1="278.5" x2="590" y2="278.5" stroke="#C0C0C0" stroke-width="1" />
      </template>
    </g>
  </g>

  <!-- Draw the x and y axes -->
