      </template>
    </g>
  </g>

  <!-- Draw the chart title and legend -->
  <g class="title-and-legend">
    <text x="300" y="25" style="font-family: sans-serif; font-size: 16px; fill: #274b6d; width: 536px; text-anchor: middle;">Chart title</text>
