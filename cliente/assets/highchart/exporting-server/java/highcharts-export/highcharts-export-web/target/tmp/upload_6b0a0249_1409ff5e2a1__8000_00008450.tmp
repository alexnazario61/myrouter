  <!-- Draw the chart series and markers -->
  <g class="series">
    <path class="series-line" fill="none" d="M 21.958333333333332 261.5 L 65.875 212.1 L 109.79166666666666 170.6 L 153.70833333333334 143.5 L 197.625 125.9 L 241.54166666666666 87.9 L 285.4583333333333 135.9 L 329.37499999999994 120.6 L 373.29166666666663 39.9 L 417.2083333333333 66.4 L 461.12499999999994 183.4 L 505.04166666666663 232.4" stroke="#2f7ed8" stroke-width="2" />
