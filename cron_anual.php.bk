// Function to remove unwanted characters from a variable
function limpavariavel($valor) {
    // Remove unnecessary characters
    $valor = trim($valor);
    $valor = str_replace(".", "", $valor);
    $valor = str_replace(",", "", $valor);
    $valor = str_replace("-", "", $valor);
    $valor = str_replace("/", "", $valor);
    $valor = str_replace("(", "", $valor);
    $valor = str_replace(")", "", $valor);

    // Return the cleaned variable
    return $valor;
}

